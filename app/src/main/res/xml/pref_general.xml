<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_general_generalheader">

        <com.dgl.auto.autosettings.PaddedSwitchPreference
            android:title="@string/pref_general_beep_title"
            android:key="@string/sp_general_beep"
            android:defaultValue="false" />

        <com.dgl.auto.autosettings.PaddedListPreference
            android:title="@string/pref_general_boottime_title"
            android:key="@string/sp_general_boottime"
            android:defaultValue="0"
            android:entries="@array/general_boottime_names"
            android:entryValues="@array/general_boottime_values" />

        <com.dgl.auto.autosettings.PaddedSwitchPreference
            android:title="@string/pref_general_playing_video_title"
            android:key="@string/sp_general_playvideo"
            android:summary="@string/pref_general_playing_video_summary"
            android:defaultValue="false" />

        <com.dgl.auto.autosettings.PaddedSwitchPreference
            android:title="@string/pref_general_shortcut_touch_state_title"
            android:key="@string/sp_general_shortcut_touch_state"
            android:defaultValue="false" />

        <com.dgl.auto.autosettings.PaddedSwitchPreference
            android:title="@string/pref_general_switch_media_status_title"
            android:key="@string/sp_general_switch_media_status"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_general_rearviewheader">

        <com.dgl.auto.autosettings.PaddedSwitchPreference
            android:title="@string/pref_general_reverse_aux_title"
            android:key="@string/sp_general_reverse_aux"
            android:defaultValue="false" />

        <com.dgl.auto.autosettings.PaddedSwitchPreference
            android:title="@string/pref_general_mirror_rearview_title"
            android:key="@string/sp_general_mirror_rearview"
            android:summary="@string/pref_general_mirror_rearview_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_general_swcheader">

        <com.dgl.auto.autosettings.PaddedListPreference
            android:title="@string/pref_general_swctype_title"
            android:key="@string/sp_general_swctype"
            android:defaultValue="0"
            android:entries="@array/general_swctype_names"
            android:entryValues="@array/general_swctype_values" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_general_usbheader">

        <Preference
            android:title="@string/pref_general_usb0_type_title"
            android:key="@string/sp_general_usb0type"
            android:persistent="false" />
        <Preference
            android:title="@string/pref_general_usb1_type_title"
            android:key="@string/sp_general_usb1type"
            android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_general_otherheader">

        <Preference
            android:title="@string/pref_general_testmode_title"
            android:key="@string/sp_general_testmode"
            android:persistent="false" />

    </PreferenceCategory>

</PreferenceScreen>
